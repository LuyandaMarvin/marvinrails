<div class="max-w-6xl mx-auto px-6 py-10">
  <div class="relative rounded-2xl overflow-hidden shadow-lg">
    <% if @post.pro && (!current_user || current_user.subscribed?) %>
      <div class="w-full aspec-video flex items-center justify-center bg-gray-100 text-center">
        <div>
          <div class="text-yellow-600 text-2xl font-semibold mb-2">Pro Content</div>
          <p class="text-gray-600 mb-4">This video is for subscribers only.</p>
          <a href="/subscribe" class="inline-block bg-yellow-500 text-white px-5 py-2 rounded-lg shadow hover:bg-yellow-600">Subscribe to Unlock</a>
        </div>
      </div>
    <% else %>
      <iframe
        class="w-full aspect-video"
        src="https://www.youtube.com/embed/<%= youtube_id(@post.video_url) %>"
        title="<%= @post.title %>"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      >
      </iframe>
    <% end %>
  </div>

  <header class="mt-8 flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
    <h1 class="text-4xl font-extrabold text-gray-900 leading-tight mx-w-3xl">
      <%= @post.title %>
    </h1>
    <div class="flex space-x-6 text-gray-500 text-sm font-medium">
      <div>
        <time datetime="<%= @post.created_at.to_date.iso8601 %>" ><%= time_ago_in_words(@post.created_at) %> ago</time>
      </div>
      <% if @post.pro %>
        <span class="inline-block bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full font-semibold tracking-tight">Pro</span>
      <% else %>
        <span class="inline-block bg-green-300 text-green-900 px-3 py-1 rounded-full font-semibold tracking-tight">Free</span>
      <% end %>
    </div>
  </header>

  <section class="mt-6">
    <h2 class="text-gray-700 uppercase tracking-wide text-sm font-semibold mb-2">Categories</h2>
    <div class="flex flex-wrap gap-3">
      <% @post.categories.each do |category| %>
        <span class="bg-indigo-100 text-indigo-700 text-xs font-medium px-3 py-1 rounded-full">
          <%= category.name %>
        </span>
      <% end %>
      <% if @post.categories.empty? %>
        <span class="text-gray-400 italic text-sm">No Categories</span>
      <% end %>
    </div>
  </section>

  <section class="mt-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-3">Description</h2>

    <% if @post.pro && (!current_user || current_user.subscribed?) %>
      <div class="rounded-xl bg-yellow-50 p-6 text-center border border-yellow-200 shadow">
        <p class="text-yellow-800 font-medium mb-3">This content is for Pro subscribers</p>
        <a href="/subscribe" class="inline-block bg-yellow-500 text-white px-5 py-2 rounded-lg shadow hover:bg-yellow-600">Subscribe to Unlock</a>
      </div>
    <% else %>
      <div class="rounded-xl bg-gray-50 p-6 prose prose-indigo max-w-none text-gray-800 shadow-sm">
        <%= @post.description.body %>
      </div>
    <% end %>
  </section>

</div>